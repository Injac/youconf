@model YouConf.Data.Entities.Conference
@{
    ViewBag.Title = @Model.Name + " Live Broadcast";
}
<div class="grid">
    <div>
        <h2 style="padding-bottom: 1em;">YouTube Live Video</h2>

        <div id="video">
            <iframe width="630" height="473" src="//youtube.com/embed/@Model.HangoutId" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>
    <div>
        <h2 style="padding-bottom: 1em;">Twitter Live chat</h2>

        <div id="chat">
            <a class="twitter-timeline" href="https://twitter.com/search?q=%23@Model.HashTag" data-widget-id="329778632119697408">Tweets about #@Model.HashTag</a>
            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to conference page", "Details", new { hashTag = Model.HashTag })
</p>

@section SideBar{}
